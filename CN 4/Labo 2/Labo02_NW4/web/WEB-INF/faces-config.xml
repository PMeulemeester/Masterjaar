<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    
    <application>
        <locale-config>
            <default-locale>nl</default-locale>
        </locale-config>
        <message-bundle>properties.immoFoutboodschappen</message-bundle>
        <resource-bundle>
            <base-name>properties.immoTekst</base-name>
            <var>labels</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>tijd</managed-bean-name>
        <managed-bean-class>beans.DateBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>zoek</managed-bean-name>
        <managed-bean-class>beans.ZoekBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>labels</property-name>
            <value>#{labels}</value>
        </managed-property>
        <managed-property>
            <property-name>immoData</property-name>
            <value>#{immoData}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>immoData</managed-bean-name>
        <managed-bean-class>be.ugent.tiwi.immo.jdbc.implementatie.ImmoDataStorage</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
        <managed-property>
            <property-name>driver</property-name>
            <value>com.mysql.jdbc.Driver</value>
        </managed-property>
        <managed-property>
            <property-name>connectieString</property-name>
            <value>jdbc:mysql://localhost:3306/immo</value>            
        </managed-property>
        <managed-property>
            <property-name>username</property-name>
            <value>root</value>
        </managed-property>
        <managed-property>
            <property-name>wachtwoord</property-name>
            <value></value>
        </managed-property>
    </managed-bean> 
    <navigation-rule>
        <from-view-id>/zoekpagina.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>nietsGevonden</from-outcome>
            <to-view-id>/zoekpagina.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>pandenGevonden</from-outcome>
            <to-view-id>/overzicht.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/overzicht.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>nietsGevonden</from-outcome>
            <to-view-id>/zoekpagina.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
